\pard \ql \cbpat3 {\fs26 \f1 \cf2 \chcbpat3 \uc0{\u8216}Rijke landen zien begrotingstekort verviervoudigen\uc0{\u8217}}
\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 De Tijd* - 16 Apr. 2020 -  7}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
