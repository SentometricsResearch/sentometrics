\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 De Morgen* - 11 Apr. 2020 -  8}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
