\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 De Tijd* - 11 Apr. 2020 -  23}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
