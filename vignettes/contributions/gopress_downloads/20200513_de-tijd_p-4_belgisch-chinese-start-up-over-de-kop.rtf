\pard \ql \cbpat3 {\fs26 \f1 \cf2 \chcbpat3 Belgisch- Chinese start-up over de kop}
\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 De Tijd* - 06 Mar. 2020 -  4}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
