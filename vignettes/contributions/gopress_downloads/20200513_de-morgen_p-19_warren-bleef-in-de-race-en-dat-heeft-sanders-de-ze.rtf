\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 De Morgen* - 05 Mar. 2020 -  19}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
