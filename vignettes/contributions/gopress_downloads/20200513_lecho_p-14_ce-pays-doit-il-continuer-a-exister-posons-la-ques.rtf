\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 L'Echo* - 14 Mar. 2020 -  14}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
