\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 De Tijd* - 14 Mar. 2020 -  25}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
