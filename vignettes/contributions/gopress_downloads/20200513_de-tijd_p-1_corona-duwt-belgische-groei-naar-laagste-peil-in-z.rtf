\pard \ql \cbpat3 {\fs26 \f1 \cf2 \chcbpat3 Corona duwt Belgische groei naar laagste peil in zeven jaar}
\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 De Tijd* - 03 Mar. 2020 -  1}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
