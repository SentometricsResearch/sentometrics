\pard \ql \cbpat3 {\fs26 \f1 \cf2 \chcbpat3 Les secteurs biotech et de l\uc0{\u8217}\uc0{\u233}quipement m\uc0{\u233}dical r\uc0{\u233}agissent}
\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 L'Echo* - 07 Apr. 2020 -  13}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
