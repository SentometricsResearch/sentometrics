\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 De Tijd* - 10 Apr. 2020 -  28}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
