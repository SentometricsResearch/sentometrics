\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 De Tijd* - 28 Mar. 2020 -  2}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
