\pard \ql \cbpat3 {\fs26 \f1 \cf2 \chcbpat3 Noodregering krijgt nucleair struikelblok op haar bord}
\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 De Tijd* - 16 Apr. 2020 -  4}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
