\pard \ql \cbpat3 {\fs26 \f1 \cf2 \chcbpat3 Oser discuter le confinement}
\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 L'Echo* - 04 Apr. 2020 -  34}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
