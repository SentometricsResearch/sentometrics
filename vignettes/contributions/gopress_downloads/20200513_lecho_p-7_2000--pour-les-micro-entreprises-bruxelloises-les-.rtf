\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 L'Echo* - 17 Apr. 2020 -  7}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
