\pard \ql \cbpat3 {\fs26 \f1 \cf2 \chcbpat3 Klaus Regling Meer dan ooit nood aan Europese solidariteit}
\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 De Tijd* - 03 Apr. 2020 -  9}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
