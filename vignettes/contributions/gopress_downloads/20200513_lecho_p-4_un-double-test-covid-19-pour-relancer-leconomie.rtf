\pard \ql \cbpat3 {\fs26 \f1 \cf2 \chcbpat3 Un double test Covid-19 pour relancer l\uc0{\u8217}\uc0{\u233}conomie}
\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 L'Echo* - 25 Mar. 2020 -  4}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
