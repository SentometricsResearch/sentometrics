\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 De Morgen* - 18 Apr. 2020 -  21}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * }
