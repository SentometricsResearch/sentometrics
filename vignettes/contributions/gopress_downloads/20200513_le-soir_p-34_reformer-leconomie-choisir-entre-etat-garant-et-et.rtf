\pard \ql \cbpat3 {\fs26 \f1 \cf2 \chcbpat3 r\uc0{\u233}former l\uc0{\u8217}\uc0{\u233}conomie Choisir entre Etat garant et Etat strat\uc0{\u232}ge}
\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 Le Soir* - 04 Apr. 2020 -  34}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * Bruxelles, Wallonie}
