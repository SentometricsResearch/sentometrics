\pard \ql \cbpat3 {\fs26 \f1 \cf2 \chcbpat3 Imp\uc0{\u244}ts, aides r\uc0{\u233}gionales\uc0{\u8230} Les droits des ind\uc0{\u233}pendants}
\par \pard \ql \cbpat3 {\fs18 \f1 \cf2 \chcbpat3 Le Soir* - 17 Apr. 2020 -  14}
\par \pard \ql \cbpat3 {\fs12 \f1 \cf2 \chcbpat3 * Bruxelles, Wallonie}
\par \pard \ql \cbpat4 { }
